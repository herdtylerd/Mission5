@{
    ViewData["Title"] = "Movie Collection";
}

@model List<Movie>

<h3>Movie Collection:</h3>

<div class="container">
    <table class="table table-bordered table-striped">
        <thead class="font-weight-bold">
            <tr>
                <td>Category</td>
                <td>Title</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited</td>
                <td>Lent to</td>
                <td>Notes</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var m in Model)
            {
            <tr>
                <td>@m.Category.CategoryName</td>
                <td>@m.Title</td>
                <td>@m.Year</td>
                <td>@m.Director</td>
                <td>@m.Rating</td>
                <td>@m.Edited</td>
                <td>@m.LentTo</td>
                <td>@m.Notes</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@m.MovieId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@m.MovieId">Delete</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>